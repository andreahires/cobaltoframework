package com.cobalto.display{		import flash.display.*;	import flash.geom.*;		public class Drawer	{				public static function DrawRect(target:*, w:Number = 100, h:Number = 100, color:int = 0xFF0000, x:Number = 0, y:Number = 0):void		{						target.graphics.beginFill(color, 1);			target.graphics.drawRect(x, y, w, h);			target.graphics.endFill();					}				public static function DrawRoundRect(target:*, w:Number = 100, h:Number = 100, color:int = 0xFF0000, ew:Number = 0, eh:Number = 0, x:Number = 0, y:Number = 0):void		{						target.graphics.beginFill(color, 1);			target.graphics.drawRoundRect(x, y, w, h, ew, eh);			target.graphics.endFill();					}				public static function DrawInvisibleRect(target:*, w:Number = 100, h:Number = 100, color:int = 0xFF0000, x:Number = 0, y:Number = 0):void		{						target.graphics.beginFill(color, 0);			target.graphics.drawRect(x, y, w, h);			target.graphics.endFill();					}				public static function DrawCircle(target:*, r:Number = 100, color:int = 0x000000, x:Number = 0, y:Number = 0):void		{			target.graphics.beginFill(color, 1);			target.graphics.drawCircle(x, y, r);			target.graphics.endFill();					}				public static function DrawLine(target:*, w:Number = 0, h:Number = 0, x:Number = 0, y:Number = 0, drawerLineColor:Number = 0xFF0000, drawerThickness:Number = 1, drawerAlpha:Number = 1, fixedPixel:Boolean = true):void		{						if(fixedPixel)target.graphics.lineStyle(drawerThickness, drawerLineColor, drawerAlpha, true, "none", "square", "miter")			else target.graphics.lineStyle(drawerThickness, drawerLineColor, drawerAlpha);						target.graphics.moveTo(x, y);			if(w)target.graphics.lineTo(x + w, y);			if(h)target.graphics.lineTo(x, y + h);					};				public static function ClearDrawer(target:*):void		{						target.graphics.clear();					}			}	}
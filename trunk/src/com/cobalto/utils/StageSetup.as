package com.cobalto.utils{    import flash.display.Stage;    import flash.display.StageAlign;    import flash.display.StageScaleMode;    import flash.events.Event;    import flash.events.EventDispatcher;	    public class StageSetup extends EventDispatcher    {				public static const STAGE_RESIZE:String = "StageResize";		protected var stage:Stage;		        public function StageSetup(stageRef:Stage) 		{			super();			stage = stageRef;			init();        }				public function init():void		{			           	stage.scaleMode = StageScaleMode.NO_SCALE;           	stage.align = StageAlign.TOP_LEFT;            stage.addEventListener(Event.RESIZE, resizeStage);		}        protected function resizeStage(e:Event):void 		{			var resizeEvent:Event = new Event(STAGE_RESIZE);			dispatchEvent(resizeEvent);        }    }}